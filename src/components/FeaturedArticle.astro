---
import fetchArticles from "../lib/fetchArticles";
const { class: className } = Astro.props;

const featuredArticle = await fetchArticles({ count: 1, featured: true });
const articleContent = featuredArticle[0].data;
console.log(featuredArticle);
---

<div class:list={[className, "featured-article-container"]}>
  <h2 class="visually-hidden">Featured Article</h2>
  <article>
    <img src="/images/image-web-3-desktop.jpg" alt="" />
    <h3>{articleContent.title}</h3>
    <div class="flow">
      <p>
        {articleContent.content}
      </p>
      <a href={`/article/${articleContent.slug}`} class="button"
        >Read More <span class="visually-hidden">About the Article</span></a
      >
    </div>
  </article>
</div>

<style>
  .featured-article-container {
    container-type: inline-size;
  }

  article {
    display: grid;
    gap: 1rem;

    @container (width > calc(25ch * 2)) {
      gap: 2rem 1rem;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  img {
    grid-column: 1 / -1;
  }

  h3 {
    font-size: var(--fs-900);
  }
</style>
